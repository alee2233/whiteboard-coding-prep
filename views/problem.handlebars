<div class="container-fluid">
  <a class="btn btn-primary" href="/" role="button">Home</a>
  <h3>{{title}}</h3>
  <p>{{description}}</p>

  <div class="accordion" id="hint-accordion">

    {{#each hints}}
    <div class="card">
      <div class="card-header" id="heading{{order_}}">
        <h2 class="mb-0">
          <button class="btn btn-link collapsed" type="button" data-toggle="collapse" data-target="#collapse{{order_}}" aria-expanded="false" aria-controls="collapse{{order_}}">
            Hint {{order_}}
          </button>
        </h2>
      </div>
      <div id="collapse{{order_}}" class="collapse" aria-labelledby="heading{{order_}}" data-parent="#hint-accordion">
        <div class="card-body">
          {{text_}}
        </div>
      </div>
    </div>
    {{/each}}

  </div>

</div>

